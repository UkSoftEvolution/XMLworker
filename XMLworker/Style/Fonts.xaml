<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <FontFamily x:Key="Light">Segoe UI Light</FontFamily>
    <FontFamily x:Key="Normal">#Segoe UI</FontFamily>
    <FontFamily x:Key="Bold">#Segoe UI Semibold</FontFamily>

    <system:Double x:Key="H1">70</system:Double>
    <system:Double x:Key="H2">40</system:Double>
    <system:Double x:Key="Header">25</system:Double>
    <system:Double x:Key="Standart">15</system:Double>
</ResourceDictionary>